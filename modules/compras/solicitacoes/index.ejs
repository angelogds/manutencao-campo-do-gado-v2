<% layout("layout") %>

<h1>Solicitações de Compra</h1>
<p>
  <a href="/solicitacoes/nova">+ Nova solicitação</a> |
  <a href="/compras">Ir para Compras</a>
</p>

<table border="1" cellpadding="6">
  <thead>
    <tr>
      <th>ID</th>
      <th>Solicitante</th>
      <th>Setor</th>
      <th>Status</th>
      <th>Criada em</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% if (!lista || lista.length === 0) { %>
      <tr><td colspan="6">Nenhuma solicitação encontrada.</td></tr>
    <% } else { %>
      <% lista.forEach(s => { %>
        <tr>
          <td><%= s.id %></td>
          <td><%= s.solicitante || "-" %></td>
          <td><%= s.setor || "-" %></td>
          <td><%= s.status %></td>
          <td><%= s.created_at || "-" %></td>
          <td><a href="/solicitacoes/<%= s.id %>">ver</a></td>
        </tr>
      <% }) %>
    <% } %>
  </tbody>
</table>
