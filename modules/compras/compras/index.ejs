<% layout("layout") %>

<h1>Compras</h1>
<p>
  <a href="/compras/nova">+ Nova compra</a> |
  <a href="/solicitacoes">Ir para Solicitações</a>
</p>

<table border="1" cellpadding="6">
  <thead>
    <tr>
      <th>ID</th>
      <th>Solicitação</th>
      <th>Fornecedor</th>
      <th>Status</th>
      <th>Data compra</th>
      <th>Data receb.</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% if (!lista || lista.length === 0) { %>
      <tr><td colspan="7">Nenhuma compra registrada.</td></tr>
    <% } else { %>
      <% lista.forEach(c => { %>
        <tr>
          <td><%= c.id %></td>
          <td><%= c.solicitacao_id || "-" %></td>
          <td><%= c.fornecedor || "-" %></td>
          <td><%= c.status %></td>
          <td><%= c.data_compra || "-" %></td>
          <td><%= c.data_recebimento || "-" %></td>
          <td><a href="/compras/<%= c.id %>">ver</a></td>
        </tr>
      <% }) %>
    <% } %>
  </tbody>
</table>
