<% layout('layout') %>

<div class="card">
  <h1>Novo Equipamento</h1>
  <div class="muted">Cadastre um equipamento da planta.</div>

  <form action="/equipamentos" method="POST">
    <div class="form-grid">

      <div class="form-group">
        <label>Código</label>
        <input name="codigo" placeholder="Ex.: DIG-LAR, CAL-01" />
      </div>

      <div class="form-group">
        <label>Ativo</label>
        <select name="ativo">
          <option value="1" selected>SIM</option>
          <option value="0">NÃO</option>
        </select>
      </div>

      <div class="form-group form-full">
        <label>Nome *</label>
        <input name="nome" required placeholder="Ex.: Digestor Laranja" />
      </div>

      <div class="form-group">
        <label>Setor</label>
        <input name="setor" placeholder="Ex.: Digestores, Caldeiras, Prensas" />
      </div>

      <div class="form-group">
        <label>Tipo</label>
        <input name="tipo" placeholder="Ex.: digestor, caldeira, prensa" />
      </div>

      <div class="form-group form-full">
        <label>Criticidade</label>
        <select name="criticidade">
          <option value="baixa">baixa</option>
          <option value="media" selected>média</option>
          <option value="alta">alta</option>
        </select>
      </div>

      <div class="form-group form-full">
        <label>Observação</label>
        <textarea name="observacao" placeholder="Detalhes do equipamento..."></textarea>
      </div>

    </div>

    <div class="form-actions">
      <button class="btn-primary" type="submit">Salvar</button>
      <a class="btn-cancel" href="/equipamentos">Cancelar</a>
    </div>
  </form>
</div>
