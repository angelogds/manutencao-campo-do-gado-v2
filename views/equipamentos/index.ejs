<% layout("layout") %>

<h1>Equipamentos</h1>
<p><a href="/equipamentos/novo">+ Novo equipamento</a></p>

<table border="1" cellpadding="6">
  <thead>
    <tr>
      <th>ID</th>
      <th>Código</th>
      <th>Nome</th>
      <th>Setor</th>
      <th>Tipo</th>
      <th>Criticidade</th>
      <th>Ativo</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% if (!lista || lista.length === 0) { %>
      <tr><td colspan="8">Nenhum equipamento cadastrado.</td></tr>
    <% } else { %>
      <% lista.forEach(e => { %>
        <tr>
          <td><%= e.id %></td>
          <td><%= e.codigo || "-" %></td>
          <td><%= e.nome %></td>
          <td><%= e.setor || "-" %></td>
          <td><%= e.tipo || "-" %></td>
          <td><%= e.criticidade || "media" %></td>
          <td><%= e.ativo ? "Sim" : "Não" %></td>
          <td><a href="/equipamentos/<%= e.id %>">ver</a></td>
        </tr>
      <% }) %>
    <% } %>
  </tbody>
</table>
