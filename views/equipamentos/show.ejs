<% layout('layout') %>

<style>
  .page-head{
    display:flex;
    justify-content:space-between;
    align-items:flex-start;
    gap:12px;
    margin-bottom:14px;
  }
  .muted{ font-size:13px; color:#6b7280; margin-top:6px; }

  .card{
    background:#fff;
    border:1px solid #e5e7eb;
    border-radius:16px;
    padding:18px;
  }

  .actions{
    display:flex;
    gap:10px;
    align-items:center;
  }

  .btn-primary{
    background:#16a34a;
    color:#fff;
    border:none;
    padding:10px 16px;
    border-radius:10px;
    font-weight:800;
    cursor:pointer;
    text-decoration:none;
    display:inline-flex;
    align-items:center;
  }
  .btn-primary:hover{ background:#15803d; }

  .btn-sm{
    display:inline-flex;
    align-items:center;
    gap:6px;
    padding:8px 12px;
    border-radius:10px;
    border:1px solid #d1d5db;
    background:#fff;
    cursor:pointer;
    text-decoration:none;
    font-weight:800;
    color:#0f172a;
    white-space:nowrap;
  }
  .btn-sm:hover{
    border-color: rgba(22,163,74,.45);
    background:#ecfdf5;
  }

  /* ✅ “tabela” harmoniosa */
  .grid{
    display:grid;
    grid-template-columns: 220px 1fr;
    gap:0;
    border:1px solid #eef2f7;
    border-radius:14px;
    overflow:hidden;
  }

  .cell{
    padding:12px 14px;
    border-bottom:1px solid #eef2f7;
    font-size:14px;
  }

  .cell.k{
    background:#fbfdff;
    color:#64748b;
    font-weight:700;
    font-size:13px;
  }

  .cell.v{
    color:#0f172a;
    font-weight:600;   /* ✅ menos pesado */
  }

  .cell:last-child,
  .cell:nth-last-child(2){
    border-bottom:none;
  }

  /* ✅ pills mais discretas */
  .pill{
    display:inline-flex;
    align-items:center;
    padding:4px 10px;
    border-radius:999px;
    font-weight:800;
    font-size:12px;
    border:1px solid #e5e7eb;
    background:#f8fafc;
    color:#334155;
  }
  .pill-on{ background:#ecfdf5; border-color:#bbf7d0; color:#14532d; }
  .pill-off{ background:#fff1f2; border-color:#fecdd3; color:#9f1239; }

  .mono{
    font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, "Liberation Mono", "Courier New", monospace;
    font-size:13px;
    font-weight:600;
    color:#0f172a;
  }

  @media (max-width: 820px){
    .grid{ grid-template-columns: 1fr; }
    .cell.k{ border-bottom:none; padding-bottom:6px; }
    .cell.v{ padding-top:0; }
  }
</style>

<div class="page-head">
  <div>
    <h1>Equipamento #<%= equip.id %></h1>
    <div class="muted"><%= equip.nome %></div>
  </div>

  <div class="actions">
    <a class="btn-sm" href="/equipamentos">Voltar</a>
    <a class="btn-primary" href="/equipamentos/<%= equip.id %>/editar">Editar</a>
  </div>
</div>

<div class="card">
  <div class="grid">
    <div class="cell k">Código</div>
    <div class="cell v"><span class="mono"><%= equip.codigo || '-' %></span></div>

    <div class="cell k">Nome</div>
    <div class="cell v"><%= equip.nome %></div>

    <div class="cell k">Setor</div>
    <div class="cell v"><%= equip.setor || '-' %></div>

    <div class="cell k">Tipo</div>
    <div class="cell v"><%= equip.tipo || '-' %></div>

    <div class="cell k">Criticidade</div>
    <div class="cell v"><span class="pill"><%= (equip.criticidade || 'media') %></span></div>

    <div class="cell k">Ativo</div>
    <div class="cell v">
      <% if (Number(equip.ativo) === 1) { %>
        <span class="pill pill-on">SIM</span>
      <% } else { %>
        <span class="pill pill-off">NÃO</span>
      <% } %>
    </div>

    <div class="cell k">Observação</div>
    <div class="cell v" style="font-weight:600; color:#475569;">
      <%= equip.observacao || '-' %>
    </div>
  </div>
</div>
