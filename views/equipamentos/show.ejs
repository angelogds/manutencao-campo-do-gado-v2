<% layout('layout') %>

<h1>Equipamento #<%= equip.id %></h1>
<p style="color:#6b7280; margin-top:-6px;">Detalhes do equipamento.</p>

<div style="background:#fff; border:1px solid #e5e7eb; border-radius:16px; padding:14px; max-width:900px;">
  <div style="display:grid; grid-template-columns:1fr 1fr; gap:12px;">
    <div>
      <div style="color:#6b7280; font-weight:900; font-size:12px;">NOME</div>
      <div style="font-weight:900; font-size:20px; margin-top:4px;"><%= equip.nome %></div>
    </div>
    <div>
      <div style="color:#6b7280; font-weight:900; font-size:12px;">CÃ“DIGO</div>
      <div style="font-weight:900; font-size:20px; margin-top:4px;"><%= equip.codigo || "-" %></div>
    </div>
  </div>

  <div style="display:grid; grid-template-columns:1fr 1fr 1fr; gap:12px; margin-top:14px;">
    <div>
      <div style="color:#6b7280; font-weight:900; font-size:12px;">SETOR</div>
      <div style="font-weight:900; margin-top:4px;"><%= equip.setor || "-" %></div>
    </div>
    <div>
      <div style="color:#6b7280; font-weight:900; font-size:12px;">TIPO</div>
      <div style="font-weight:900; margin-top:4px;"><%= equip.tipo || "-" %></div>
    </div>
    <div>
      <div style="color:#6b7280; font-weight:900; font-size:12px;">CRITICIDADE</div>
      <div style="font-weight:900; margin-top:4px;"><%= (equip.criticidade || "media").toUpperCase() %></div>
    </div>
  </div>

  <div style="display:flex; gap:10px; margin-top:14px;">
    <a class="btn btn-ghost" href="/equipamentos" style="text-decoration:none;">Voltar</a>
    <a class="btn" href="/equipamentos/<%= equip.id %>/editar" style="text-decoration:none;">Editar</a>
  </div>
</div>
