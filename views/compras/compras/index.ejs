<% layout('layout') %>

<div class="page-head">
  <div>
    <h1>Compras</h1>
    <p class="muted">Solicitações, acompanhamento e recebimento.</p>
  </div>

  <div class="actions">
    <a class="btn btn-green" href="/solicitacoes/nova">+ Nova Solicitação</a>
    <a class="btn btn-ghost" href="/compras">Ir para Compras</a>
  </div>
</div>

<div class="card">
  <div class="table-wrap">
    <table class="table">
      <thead>
        <tr>
          <th style="width:90px;">#</th>
          <th style="width:140px;">Status</th>
          <th>Solicitante</th>
          <th>Setor</th>
          <th style="width:180px;">Criada em</th>
          <th style="width:120px; text-align:right;">Ações</th>
        </tr>
      </thead>

      <tbody>
        <% if (!lista || !lista.length) { %>
          <tr>
            <td colspan="6" class="muted" style="text-align:center; padding:22px;">
              Nenhuma solicitação cadastrada.
            </td>
          </tr>
        <% } %>

        <% (lista || []).forEach(s => { %>
          <tr>
            <td>#<%= s.id %></td>

            <td>
              <span class="pill-tag pill-gray">
                <%= s.status || "-" %>
              </span>
            </td>

            <td><%= s.solicitante || "-" %></td>

            <td><%= s.setor || "-" %></td>

            <td><%= s.created_at ? fmtBR(s.created_at) : "-" %></td>

            <td style="text-align:right;">
              <a class="btn btn-ghost btn-sm" href="/solicitacoes/<%= s.id %>">
                Abrir
              </a>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</div>
