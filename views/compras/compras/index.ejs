<% layout('layout') %>

<style>
  .page-head{
    display:flex;
    align-items:flex-end;
    justify-content:space-between;
    gap:12px;
    margin-bottom:14px;
  }

  .muted{
    font-size:13px;
    color:#6b7280;
    margin-top:6px;
  }

  .card{
    background:#fff;
    border:1px solid #e5e7eb;
    border-radius:16px;
    padding:18px;
  }

  .actions{
    display:flex;
    gap:10px;
    align-items:center;
  }

  /* ✅ Mesmo botão verde do Equipamentos */
  .btn-primary{
    background:#16a34a;
    color:#fff;
    border:none;
    padding:10px 16px;
    border-radius:10px;
    font-weight:700;
    cursor:pointer;
    text-decoration:none;
    display:inline-flex;
    align-items:center;
    gap:8px;
  }
  .btn-primary:hover{
    background:#15803d;
  }

  .btn-ghost{
    background:#f3f4f6;
    border:1px solid #d1d5db;
    padding:10px 16px;
    border-radius:10px;
    font-weight:700;
    cursor:pointer;
    text-decoration:none;
    color:#374151;
    display:inline-flex;
    align-items:center;
    gap:8px;
  }

  .table-wrap{ overflow:auto; }

  table{
    width:100%;
    border-collapse:separate;
    border-spacing:0;
    min-width:980px;
  }

  thead th{
    text-align:left;
    font-size:12px;
    color:#64748b;
    font-weight:700;
    letter-spacing:.02em;
    padding:12px 12px;
    border-bottom:1px solid #e5e7eb;
    background:#fff;
  }

  tbody td{
    padding:12px 12px;
    border-bottom:1px solid #f1f5f9;
    font-size:14px;
    color:#0f172a;
  }

  tbody tr:hover td{
    background:#f8fafc;
  }

  .btn-sm{
    display:inline-flex;
    align-items:center;
    gap:6px;
    padding:8px 12px;
    border-radius:10px;
    border:1px solid #d1d5db;
    background:#fff;
    cursor:pointer;
    text-decoration:none;
    font-weight:800;
    color:#0f172a;
  }

  .btn-sm:hover{
    border-color: rgba(22,163,74,.45);
    background:#ecfdf5;
  }

  .pill{
    display:inline-flex;
    padding:4px 10px;
    border-radius:999px;
    font-weight:800;
    font-size:12px;
    background:#f1f5f9;
  }
</style>

<div class="page-head">
  <div>
    <h1>Compras</h1>
    <div class="muted">Recebimento e acompanhamento de compras.</div>
  </div>

  <div class="actions">
    <a class="btn-primary" href="/compras/nova">+ Nova Compra</a>
    <a class="btn-ghost" href="/solicitacoes">Ir para Solicitações</a>
  </div>
</div>

<div class="card">
  <div class="table-wrap">
    <table>
      <thead>
        <tr>
          <th style="width:90px;">#</th>
          <th style="width:160px;">Status</th>
          <th>Fornecedor</th>
          <th style="width:180px;">Data da Compra</th>
          <th style="width:180px;">Criada em</th>
          <th style="width:120px; text-align:right;">Ações</th>
        </tr>
      </thead>

      <tbody>
        <% if (!lista || !lista.length) { %>
          <tr>
            <td colspan="6" style="padding:18px; color:#6b7280; text-align:center;">
              Nenhuma compra cadastrada.
            </td>
          </tr>
        <% } %>

        <% (lista || []).forEach(c => { %>
          <tr>
            <td>#<%= c.id %></td>

            <td>
              <span class="pill"><%= c.status || "-" %></span>
            </td>

            <td><%= c.fornecedor || '-' %></td>

            <td><%= c.data_compra || '-' %></td>

            <td><%= c.created_at ? fmtBR(c.created_at) : '-' %></td>

            <td style="text-align:right;">
              <a class="btn-sm" href="/compras/<%= c.id %>">Abrir</a>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</div>
