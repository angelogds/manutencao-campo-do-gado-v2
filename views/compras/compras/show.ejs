<% layout('layout') %>

<style>
  .grid{ display:grid; grid-template-columns:2fr 1fr; gap:12px; }
  .card{ background:#fff; border:1px solid #e5e7eb; border-radius:16px; padding:14px; }
  .k{ color:#6b7280; font-weight:900; font-size:12px; letter-spacing:.04em; }
  .v{ font-size:18px; font-weight:900; margin-top:6px; }
  .muted{ color:#6b7280; }
  .btn{ display:inline-block; padding:10px 12px; border-radius:12px; border:1px solid #e5e7eb; background:#fff; font-weight:800; }
  .table{ width:100%; border-collapse:collapse; }
  .table th,.table td{ padding:10px; border-bottom:1px solid #f1f5f9; text-align:left; font-size:14px; }
  input,select{ padding:10px 12px; border:1px solid #e5e7eb; border-radius:12px; font-size:14px; width:100%; }
  .row2{ display:grid; grid-template-columns:2fr 1fr 1fr; gap:10px; }
  @media (max-width: 980px){ .grid{ grid-template-columns:1fr;} }
</style>

<h1>Compra #<%= compra.id %></h1>
<p class="muted" style="margin-top:-6px;">Itens comprados e recebimento.</p>

<div class="grid">
  <div class="card">
    <div class="k">ITENS</div>
    <div class="v">Adicionar item</div>

    <form method="post" action="/compras/<%= compra.id %>/itens" style="margin-top:12px;">
      <div class="row2">
        <input name="descricao" placeholder="Descrição do item" required />
        <input name="quantidade" type="number" step="0.01" value="1" required />
        <input name="custo_unit" type="number" step="0.01" value="0" />
      </div>
      <div style="margin-top:10px;">
        <button class="btn" type="submit">Adicionar</button>
      </div>
    </form>

    <div style="margin-top:14px; overflow:auto;">
      <table class="table">
        <thead>
          <tr>
            <th>Descrição</th>
            <th>Qtd</th>
            <th>R$</th>
          </tr>
        </thead>
        <tbody>
          <% if (!itens || itens.length === 0) { %>
            <tr><td colspan="3" class="muted">Sem itens ainda.</td></tr>
          <% } else { %>
            <% itens.forEach(i => { %>
              <tr>
                <td><%= i.descricao %></td>
                <td class="muted"><%= i.quantidade %></td>
                <td class="muted"><%= i.custo_unit %></td>
              </tr>
            <% }) %>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>

  <div class="card">
    <div class="k">DADOS</div>
    <div class="v">Status e informações</div>

    <div style="margin-top:12px;">
      <div class="muted">Fornecedor</div>
      <div style="font-weight:900;"><%= compra.fornecedor || '-' %></div>

      <div class="muted" style="margin-top:10px;">Data compra</div>
      <div style="font-weight:900;"><%= compra.data_compra || '-' %></div>

      <div class="muted" style="margin-top:10px;">Data recebimento</div>
      <div style="font-weight:900;"><%= compra.data_recebimento || '-' %></div>

      <form method="post" action="/compras/<%= compra.id %>/status" style="margin-top:12px;">
        <label class="muted">Status</label>
        <select name="status">
          <% ["em_andamento","recebida","cancelada"].forEach(st => { %>
            <option value="<%= st %>" <%= compra.status === st ? "selected" : "" %>><%= st %></option>
          <% }) %>
        </select>
        <div style="margin-top:10px;">
          <button class="btn" type="submit">Atualizar</button>
          <a class="btn" href="/compras">Voltar</a>
        </div>
      </form>
    </div>
  </div>
</div>
