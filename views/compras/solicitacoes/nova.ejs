<% layout("layout") %>

<h1>Nova Solicitação</h1>

<form method="POST" action="/solicitacoes">
  <div>
    <label>Solicitante</label><br/>
    <input name="solicitante" />
  </div>

  <div style="margin-top:10px;">
    <label>Setor</label><br/>
    <input name="setor" />
  </div>

  <div style="margin-top:10px;">
    <label>Observação</label><br/>
    <textarea name="observacao" rows="3" cols="60"></textarea>
  </div>

  <hr/>

  <h3>Item (mínimo 1)</h3>
  <div>
    <label>Descrição *</label><br/>
    <input name="item_descricao" required style="width:420px;" />
  </div>

  <div style="margin-top:10px;">
    <label>Quantidade</label><br/>
    <input name="item_quantidade" value="1" />
  </div>

  <div style="margin-top:10px;">
    <label>Unidade</label><br/>
    <input name="item_unidade" value="un" />
  </div>

  <div style="margin-top:12px;">
    <button type="submit">Salvar</button>
    <a href="/solicitacoes">Cancelar</a>
  </div>
</form>
