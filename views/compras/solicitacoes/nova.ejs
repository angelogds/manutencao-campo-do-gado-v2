<% layout('layout') %>

<div class="page-head">
  <div>
    <h1>Nova Solicitação</h1>
    <p class="muted">Cadastro rápido (1 item por enquanto). Depois expandimos para múltiplos itens.</p>
  </div>
</div>

<div class="card" style="max-width: 920px;">
  <form action="/solicitacoes" method="POST">

    <div class="grid-2">
      <div>
        <div class="label">Solicitante</div>
        <input class="input" name="solicitante" placeholder="Ex.: Angelo" />
      </div>

      <div>
        <div class="label">Setor</div>
        <input class="input" name="setor" placeholder="Ex.: Manutenção / Produção" />
      </div>
    </div>

    <div class="divider"></div>

    <div>
      <div class="label">Observação</div>
      <textarea class="input" name="observacao" placeholder="Opcional"></textarea>
    </div>

    <div class="divider"></div>

    <div>
      <div style="font-weight:900; font-size:16px;">Item</div>
      <div class="muted" style="margin-top:6px;">Descrição + quantidade + unidade.</div>

      <div style="margin-top:12px;">
        <div class="label">Descrição</div>
        <input class="input" name="item_descricao" required placeholder="Ex.: Rolamento 6307" />
      </div>

      <div class="grid-2" style="margin-top:12px;">
        <div>
          <div class="label">Quantidade</div>
          <input class="input" name="item_quantidade" placeholder="1" />
        </div>

        <div>
          <div class="label">Unidade</div>
          <input class="input" name="item_unidade" placeholder="un" />
        </div>
      </div>
    </div>

    <div style="margin-top:18px; display:flex; gap:10px;">
      <button class="btn btn-green" type="submit">Salvar Solicitação</button>
      <a class="btn btn-ghost" href="/solicitacoes">Cancelar</a>
    </div>

  </form>
</div>
