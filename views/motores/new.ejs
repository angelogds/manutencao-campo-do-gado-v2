<% layout('layout') %>

<div class="page">

  <div class="page-head">
    <div>
      <h1>Cadastrar Motor</h1>
      <p class="muted">Cadastro de motor da planta</p>
    </div>
    <a class="btn btn-ghost" href="/motores">Voltar</a>
  </div>

  <div class="card">

    <form method="POST" action="/motores" class="grid-2">

      <div>
        <div class="label">Código / Patrimônio</div>
        <input class="input" name="codigo" placeholder="Ex: MTR-001">
      </div>

      <div>
        <div class="label">Descrição *</div>
        <input class="input" name="descricao" required placeholder="Ex: Motor 5CV 1700RPM">
      </div>

      <div>
        <div class="label">Potência (CV)</div>
        <input class="input" name="potencia_cv" type="number" step="0.1" placeholder="5">
      </div>

      <div>
        <div class="label">RPM</div>
        <input class="input" name="rpm" type="number" step="1" placeholder="1700">
      </div>

      <div>
        <div class="label">Origem</div>
        <select name="origem_unidade">
          <option value="RECICLAGEM">RECICLAGEM</option>
          <option value="FRIGORIFICO">FRIGORÍFICO</option>
        </select>
      </div>

      <div>
        <div class="label">Status</div>
        <select name="status">
          <option value="EM_USO">EM_USO</option>
          <option value="RESERVA">RESERVA</option>
          <option value="RETORNOU">RETORNOU</option>
          <option value="ENVIADO_REBOB">ENVIADO_REBOB</option>
        </select>
      </div>

      <div style="grid-column: 1 / -1;">
        <div class="label">Local de Instalação</div>
        <input class="input" name="local_instalacao"
               placeholder="Ex: Rosca 02 / Caldeira / Digestor">
      </div>

      <div style="grid-column: 1 / -1;">
        <div class="label">Observação</div>
        <textarea name="observacao"></textarea>
      </div>

      <div style="grid-column: 1 / -1; display:flex; justify-content:flex-end; gap:10px;">
        <a class="btn btn-ghost" href="/motores">Cancelar</a>
        <button class="btn btn-primary" type="submit">Salvar</button>
      </div>

    </form>

  </div>

</div>
