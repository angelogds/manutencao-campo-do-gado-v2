<% layout('layout') %>

<div class="page-head">
  <div>
    <h1>Equipamento #<%= equip.id %></h1>
    <div class="muted"><%= equip.nome %></div>
  </div>

  <div style="display:flex; gap:10px; align-items:center;">
    <a class="btn" href="/equipamentos">Voltar</a>
    <a class="btn-primary" href="/equipamentos/<%= equip.id %>/editar">Editar</a>
  </div>
</div>

<div class="card">
  <div class="kv">
    <div class="k">Código</div>
    <div class="v"><span class="mono"><%= equip.codigo || '-' %></span></div>

    <div class="k">Nome</div>
    <div class="v"><%= equip.nome %></div>

    <div class="k">Setor</div>
    <div class="v"><%= equip.setor || '-' %></div>

    <div class="k">Tipo</div>
    <div class="v"><%= equip.tipo || '-' %></div>

    <div class="k">Criticidade</div>
    <div class="v"><span class="tag"><%= (equip.criticidade || 'media') %></span></div>

    <div class="k">Ativo</div>
    <div class="v">
      <% if (Number(equip.ativo) === 1) { %>
        <span class="tag tag-ok">SIM</span>
      <% } else { %>
        <span class="tag tag-no">NÃO</span>
      <% } %>
    </div>

    <div class="k">Observação</div>
    <div class="v" style="color:#475569;"><%= equip.observacao || '-' %></div>
  </div>
</div>
