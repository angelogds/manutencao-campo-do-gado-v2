<% layout('layout') %>

<style>
  .grid{ display:grid; grid-template-columns:2fr 1fr; gap:12px; }
  .card{ background:#fff; border:1px solid #e5e7eb; border-radius:16px; padding:14px; }
  .k{ color:#6b7280; font-weight:900; font-size:12px; letter-spacing:.04em; }
  .v{ font-size:18px; font-weight:900; margin-top:6px; }
  .muted{ color:#6b7280; }
  .btn{ display:inline-block; padding:10px 12px; border-radius:12px; border:1px solid #e5e7eb; background:#fff; font-weight:800; cursor:pointer; }
  .table{ width:100%; border-collapse:collapse; }
  .table th,.table td{ padding:10px; border-bottom:1px solid #f1f5f9; text-align:left; font-size:14px; }
  input,select{ padding:10px 12px; border:1px solid #e5e7eb; border-radius:12px; font-size:14px; width:100%; }
  .row2{ display:grid; grid-template-columns:1fr 1fr; gap:10px; }
  @media (max-width: 980px){ .grid{ grid-template-columns:1fr;} }
</style>

<h1>Item: <%= item.nome %></h1>
<p class="muted" style="margin-top:-6px;">Saldo atual: <b><%= saldo ?? 0 %></b> (<%= item.unidade || "un" %>)</p>

<div class="grid">
  <div class="card">
    <div class="k">MOVIMENTAÇÕES</div>
    <div class="v">Histórico</div>

    <div style="margin-top:12px; overflow:auto;">
      <table class="table">
        <thead>
          <tr>
            <th>Data</th>
            <th>Tipo</th>
            <th>Qtd</th>
            <th>Obs</th>
          </tr>
        </thead>
        <tbody>
          <% if (!movs || movs.length === 0) { %>
            <tr><td colspan="4" class="muted">Sem movimentos ainda.</td></tr>
          <% } else { %>
            <% movs.forEach(m => { %>
              <tr>
                <td class="muted"><%= m.created_at || "-" %></td>
                <td><%= m.tipo %></td>
                <td class="muted"><%= m.quantidade %></td>
                <td class="muted"><%= m.observacao || "-" %></td>
              </tr>
            <% }) %>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>

  <div class="card">
    <div class="k">LANÇAR MOVIMENTO</div>
    <div class="v">Entrada / Saída</div>

    <form method="post" action="/estoque/<%= item.id %>/mov" style="margin-top:12px;">
      <div class="row2">
        <div>
          <label class="muted">Tipo</label>
          <select name="tipo">
            <option value="entrada">entrada</option>
            <option value="saida">saida</option>
            <option value="ajuste">ajuste</option>
          </select>
        </div>

        <div>
          <label class="muted">Quantidade</label>
          <input name="quantidade" type="number" step="0.01" value="1" required />
        </div>
      </div>

      <div style="margin-top:10px;">
        <label class="muted">Observação</label>
        <input name="observacao" placeholder="Ex: Almoxarifado / OS #12 / Inventário" />
      </div>

      <div style="margin-top:10px; display:flex; gap:10px;">
        <button class="btn" type="submit">Lançar</button>
        <a class="btn" href="/estoque">Voltar</a>
      </div>
    </form>
  </div>
</div>
