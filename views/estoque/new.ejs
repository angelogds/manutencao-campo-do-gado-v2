<% layout('layout') %>

<style>
  .card{ background:#fff; border:1px solid #e5e7eb; border-radius:16px; padding:14px; max-width:900px; }
  .muted{ color:#6b7280; }
  .row{ display:grid; grid-template-columns:repeat(2, minmax(0,1fr)); gap:12px; }
  .field{ display:flex; flex-direction:column; gap:6px; }
  input,select{ padding:10px 12px; border:1px solid #e5e7eb; border-radius:12px; font-size:14px; }
  .btn{ display:inline-block; padding:10px 12px; border-radius:12px; border:1px solid #e5e7eb; background:#fff; font-weight:800; cursor:pointer; }
  .actions{ display:flex; gap:10px; margin-top:12px; }
  @media (max-width: 760px){ .row{ grid-template-columns:1fr; } }
</style>

<h1>Novo Item</h1>
<p class="muted" style="margin-top:-6px;">Cadastre um item no almoxarifado.</p>

<div class="card">
  <form method="post" action="/estoque">
    <div class="row">
      <div class="field">
        <label>Código</label>
        <input name="codigo" placeholder="Ex: B102 / 5V1500 / ROL-6205" />
      </div>
      <div class="field">
        <label>Unidade</label>
        <input name="unidade" value="un" />
      </div>
    </div>

    <div class="field" style="margin-top:12px;">
      <label>Nome</label>
      <input name="nome" placeholder="Ex: Correia B102" required />
    </div>

    <div class="row" style="margin-top:12px;">
      <div class="field">
        <label>Estoque mínimo</label>
        <input name="estoque_min" type="number" step="0.01" value="0" />
      </div>
      <div class="field">
        <label>Custo unitário (R$)</label>
        <input name="custo_unit" type="number" step="0.01" value="0" />
      </div>
    </div>

    <div class="actions">
      <button class="btn" type="submit">Salvar</button>
      <a class="btn" href="/estoque">Voltar</a>
    </div>
  </form>
</div>
