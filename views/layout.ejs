<!doctype html>
<html lang="pt-br">
<head>
  <meta charset="utf-8"/>
  <meta name="viewport" content="width=device-width,initial-scale=1"/>
  <title>Login • Manutenção Campo do Gado</title>

  <link rel="stylesheet" href="/css/app.css"/>

  <style>
    body{
      display:flex;
      align-items:center;
      justify-content:center;
      min-height:100vh;
      background:linear-gradient(135deg,#f3faf6 0%, #e7f5ee 100%);
    }

    .login-wrapper{
      width:100%;
      max-width:420px;
      padding:20px;
    }

    .login-card{
      background:#fff;
      border-radius:20px;
      padding:28px;
      box-shadow:0 20px 40px rgba(0,0,0,.08);
      border:1px solid #e5e7eb;
    }

    .logo{
      text-align:center;
      margin-bottom:20px;
    }

    .logo-badge{
      width:60px;
      height:60px;
      border-radius:18px;
      background:linear-gradient(135deg,var(--green-900),var(--green-700));
      display:flex;
      align-items:center;
      justify-content:center;
      color:#fff;
      font-weight:900;
      font-size:22px;
      margin:0 auto 12px;
    }

    .title{
      text-align:center;
      font-size:22px;
      font-weight:900;
    }

    .subtitle{
      text-align:center;
      color:var(--muted);
      font-size:13px;
      margin-top:6px;
    }

    .form-group{
      margin-top:18px;
    }

    .form-group label{
      display:block;
      font-size:12px;
      font-weight:900;
      letter-spacing:.06em;
      text-transform:uppercase;
      color:var(--muted);
      margin-bottom:6px;
    }

    .form-group input{
      width:100%;
      padding:12px;
      border-radius:14px;
      border:1px solid var(--border);
      outline:none;
      font:inherit;
    }

    .form-group input:focus{
      border-color:var(--green-700);
      box-shadow:0 0 0 3px rgba(19,138,95,.15);
    }

    .btn-login{
      width:100%;
      margin-top:22px;
      padding:12px;
      border-radius:14px;
      border:none;
      background:var(--action-600);
      color:#fff;
      font-weight:900;
      cursor:pointer;
      transition:.2s ease;
    }

    .btn-login:hover{
      background:var(--action-700);
    }

    .footer-text{
      text-align:center;
      margin-top:18px;
      font-size:12px;
      color:var(--muted);
    }

    .alert{
      margin-top:14px;
      border-radius:14px;
      padding:10px 12px;
      font-weight:700;
      font-size:13px;
    }

    .alert-error{
      background:#fff5f5;
      border:1px solid #fecaca;
      color:#7f1d1d;
    }
  </style>
</head>

<body>

  <div class="login-wrapper">
    <div class="login-card">

      <div class="logo">
        <div class="logo-badge">CG</div>
        <div class="title">Campo do Gado</div>
        <div class="subtitle">Manutenção Industrial • Sistema V2</div>
      </div>

      <% if (flash?.error?.length) { %>
        <div class="alert alert-error">
          <%= flash.error[0] %>
        </div>
      <% } %>

      <form method="POST" action="/login">
        <div class="form-group">
          <label>E-mail</label>
          <input type="email" name="email" required />
        </div>

        <div class="form-group">
          <label>Senha</label>
          <input type="password" name="password" required />
        </div>

        <button class="btn-login" type="submit">
          Entrar no Sistema
        </button>
      </form>

      <div class="footer-text">
        © <%= new Date().getFullYear() %> Campo do Gado
      </div>

    </div>
  </div>

</body>
</html>
