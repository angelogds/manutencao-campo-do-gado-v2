<% layout('layout') %>

<style>
  .grid{ display:grid; grid-template-columns: repeat(3, 1fr); gap:14px; }
  .card{ background:#fff; border:1px solid #e5e7eb; border-radius:16px; padding:16px; box-shadow:0 10px 26px rgba(0,0,0,.06); }
  .k{ color:#6b7280; font-weight:900; font-size:12px; letter-spacing:.02em; }
  .v{ font-weight:900; font-size:22px; margin-top:6px; }
  @media (max-width: 900px){ .grid{ grid-template-columns: 1fr; } }
</style>

<h1>Dashboard</h1>
<p style="margin-top:-6px; color:#6b7280; font-weight:700;">
  Visão geral do sistema (V2).
</p>

<div class="grid">
  <div class="card">
    <div class="k">Ordens de Serviço</div>
    <div class="v">Abrir / Acompanhar</div>
  </div>
  <div class="card">
    <div class="k">Compras (Inbox)</div>
    <div class="v">Solicitações</div>
  </div>
  <div class="card">
    <div class="k">Estoque</div>
    <div class="v">Controle</div>
  </div>
</div>
