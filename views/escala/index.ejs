<% layout("layout") %>

<style>
  .grid {
    display: grid;
    grid-template-columns: repeat(3, minmax(0, 1fr));
    gap: 16px;
  }
  .card {
    background: #fff;
    border: 1px solid #e5e7eb;
    border-radius: 16px;
    padding: 16px;
  }
  .card h3 {
    margin: 0 0 8px;
    font-size: 14px;
    color: #065f46;
    font-weight: 800;
    text-transform: uppercase;
  }
  .pill {
    display: inline-block;
    background: #ecfdf5;
    color: #065f46;
    padding: 6px 10px;
    border-radius: 999px;
    font-weight: 700;
    margin: 4px 4px 0 0;
    font-size: 13px;
  }
</style>

<h1>Escala de Trabalho</h1>
<p class="muted">Organização semanal da manutenção</p>

<div class="grid">
  <!-- NOTURNO -->
  <div class="card">
    <h3>Turno Noturno</h3>
    <div class="muted"><%= escala.horarios.noturno %></div>

    <% escala.noturno.forEach(n => { %>
      <span class="pill"><%= n %></span>
    <% }) %>
  </div>

  <!-- DIURNO -->
  <div class="card">
    <h3>Turno Diurno</h3>
    <div class="muted"><%= escala.horarios.diurno %></div>

    <% escala.diurno.forEach(d => { %>
      <span class="pill"><%= d %></span>
    <% }) %>
  </div>

  <!-- APOIO -->
  <div class="card">
    <h3>Apoio Operacional</h3>

    <% escala.apoio.forEach(a => { %>
      <span class="pill"><%= a %></span>
    <% }) %>
  </div>
</div>
