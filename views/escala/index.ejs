<h2>Escala - Semana Atual</h2>

<% if (semanaAtual) { %>

<div class="card">
  <h3>Semana <%= semanaAtual.semana_numero %></h3>
  <p><%= semanaAtual.data_inicio %> at√© <%= semanaAtual.data_fim %></p>

  <% Object.keys(semanaAtual.times).forEach(turno => { %>
    <h4><%= turno.toUpperCase() %></h4>
    <ul>
      <% semanaAtual.times[turno].forEach(nome => { %>
        <li><%= nome %></li>
      <% }) %>
    </ul>
  <% }) %>

  <a href="/escala/completa" class="btn">Ver Escala Completa</a>
  <a href="/escala/editar/<%= semanaAtual.id %>" class="btn">Editar</a>
  <a href="/escala/pdf/<%= semanaAtual.id %>" class="btn">Gerar PDF</a>
</div>

<% } else { %>
<p>Sem escala ativa.</p>
<% } %>
