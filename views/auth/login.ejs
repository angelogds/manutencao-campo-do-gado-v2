<% layout('layout') %>

<div class="page-head">
  <div>
    <h1>Entrar</h1>
    <p class="muted">Acesse o sistema de manutenÃ§Ã£o.</p>
  </div>
</div>

<div class="card" style="max-width:420px;">

  <% if (error && error.length) { %>
    <div class="alert alert-error" style="margin-bottom:12px;">
      <%= error[0] %>
    </div>
  <% } %>

  <% if (success && success.length) { %>
    <div class="alert alert-success" style="margin-bottom:12px;">
      <%= success[0] %>
    </div>
  <% } %>

  <% if (typeof lockout !== 'undefined' && lockout) { %>
    <div class="alert alert-error" style="margin-bottom:12px;">
      Muitas tentativas. Aguarde <b><%= lockout.remainingSeconds %></b> segundos e tente novamente.
    </div>
  <% } %>

  <% if (typeof attemptsLeft !== 'undefined' && attemptsLeft !== null) { %>
    <div class="alert" style="margin-bottom:12px;">
      Tentativas restantes: <b><%= attemptsLeft %></b>
    </div>
  <% } %>

  <form action="/auth/login" method="POST" style="display:grid; gap:12px;">
    <div>
      <div class="label">Email</div>
      <input
        class="input"
        type="email"
        name="email"
        value="<%= rememberedEmail || '' %>"
        required
        autocomplete="email"
      />
    </div>

    <div>
      <div class="label">Senha</div>
      <input
        class="input"
        type="password"
        name="password"
        required
        autocomplete="current-password"
      />
    </div>

    <button class="btn btn-green" type="submit">Entrar</button>
  </form>
</div>
